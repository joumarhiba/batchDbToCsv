<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xmlns:batch="http://www.springframework.org/schema/batch"
 xmlns:jdbc="http://www.springframework.org/schema/jdbc"
 xmlns:context="http://www.springframework.org/schema/context"
 xsi:schemaLocation="http://www.springframework.org/schema/jdbc 
      http://www.springframework.org/schema/jdbc/spring-jdbc-3.2.xsd
      http://www.springframework.org/schema/beans 
      http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
      http://www.springframework.org/schema/batch 
      http://www.springframework.org/schema/batch/spring-batch-2.2.xsd
      http://www.springframework.org/schema/context 
      http://www.springframework.org/schema/context/spring-context-3.2.xsd">

<context:property-placeholder location="classpath:datasource.properties" ignore-unresolvable="true"/>
<!-- configuration DataSource H2 Projet -->
<!--     </bean> -->
<jdbc:embedded-database id="dataSource" type="H2">
    <jdbc:script location="classpath:initH2Data.sql"/>
</jdbc:embedded-database>

    <bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
        <property name="dataSource" ref="dataSource" />
    </bean>

    <bean id="namedParameterJdbcTemplate"
        class="org.springframework.jdbc.core.namedparam.NamedParameterJdbcTemplate">
        <constructor-arg ref="dataSource" />
    </bean>
 
<!-- Initialisation du transaction manager utilisÃ© par le use case -->
 <bean id="transactionManager" lazy-init="true"
     class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
  <property name="dataSource" ref="dataSource" />
 </bean>




<!-- Creation de la base de données H2 pour les tables techniques spring 
        batch -->
    <jdbc:embedded-database id="dataSourceSpringBatch" type="H2">
        <jdbc:script location="classpath:org/springframework/batch/core/schema-drop-h2.sql" />
        <jdbc:script location="classpath:org/springframework/batch/core/schema-h2.sql" />
    </jdbc:embedded-database>


    <!-- Initialisation du transaction manager utilisé par le use case -->
    <bean id="transactionManagerSpring" lazy-init="true" 
        class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource" ref="dataSourceSpringBatch" />
    </bean>


    <!-- Référence vers les tables utilisées par le transactionManager -->
    <batch:job-repository id="jobRepository"
        data-source="dataSourceSpringBatch" transaction-manager="transactionManagerSpring"
        isolation-level-for-create="READ_COMMITTED" table-prefix="BATCH_"
        lob-handler="defaultlobHandler" />


    <bean id="jobExplorer" class="org.springframework.batch.core.explore.support.JobExplorerFactoryBean">
        <property name="dataSource" ref="dataSourceSpringBatch" />
        <property name="tablePrefix" value="BATCH_" />
    </bean>


    <bean id="defaultlobHandler" class="org.springframework.jdbc.support.lob.DefaultLobHandler" />

    <bean id="jobLauncher"
        class="org.springframework.batch.core.launch.support.SimpleJobLauncher">
        <property name="jobRepository" ref="jobRepository" />
    </bean>


</beans>